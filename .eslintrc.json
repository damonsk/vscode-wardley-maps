{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true,
		"amd": true
	},
	"plugins": [
		"@typescript-eslint",
		"react",
		"prettier"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:react/recommended",
		"prettier"
	],
	"rules": {
		"prettier/prettier": [
			"error",
			{},
			{
				"usePrettierrc": true
			}
		],
		"linebreak-style": "off",
		"react/prop-types": "off",
		"no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
		"@typescript-eslint/ban-ts-comment": ["error", {
			"ts-nocheck": "allow-with-description"
		}]
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"ignorePatterns": ["extension/out/**", "build/**", "**/*.d.ts"]
}